%div.sideber
  %div.sideber-header
    %div.sideber-header__box
      %p.sideber-header__box__user-name
        = current_user.name
      %ul.sideber-header__box__menu
        %li.sideber-header__box__menu__edit-user
          = link_to new_group_path do
            = fa_icon 'edit'
        %li.sideber-header__box__menu__new-group
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog'
  %div.sideber-chatlist
    %div.sideber-chatlist__box
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          %p.sideber-chatlist__box__group-name
            = group.name
          %p.sideber-chatlist__box__text
            = group.show_last_message
